{form form}
    {if $form->hasErrors()}
        {foreach $form->errors as $error}
            {$error}
        {/foreach}
    {/if}
    <div class="row mb-3">
        <div class="col-xs-9">
            <input class="form-control" n:name="name" placeholder="Název testu"/>
        </div>
        <div class="col-xs-3">
            <button class="btn btn-primary btn-block" n:name="submit">Přidat test</button>
        </div>
    </div>
{/form}